<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionCode="12"
      android:installLocation="auto"
      android:versionName="1.5.6" package="com.switkows.mileage">
   <application android:icon="@drawable/mileage_tracker_icon" android:label="@string/app_name" android:debuggable="false">
      <activity android:name=".MileageTracker"
         android:label="@string/app_name">
         <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
         </intent-filter>
      </activity>
      <activity android:name=".EditRecordsMenu" />
      <provider android:name="MileageProvider"
         android:authorities="com.switkows.mileage.MileageProvider"
	  />

      <!--  This section is setting up the 'editor' page -->
      <activity android:name="EditRecord"
         android:label="Edit Record"
         android:theme="@android:style/Theme.Dialog"
      >
            <!-- This filter says that we can view or edit the data of
                 a single note -->
         <intent-filter android:label="FIXME2">
            <action android:name="android.intent.action.VIEW" />
            <action android:name="android.intent.action.EDIT" />
   <!--                <action android:name="com.switkows.mileage.EDIT_RECORD" />-->
            <category android:name="android.intent.category.DEFAULT" />
            <data android:mimeType="vnd.android.cursor.item/vnd.google.mileage" />
         </intent-filter>
         <intent-filter android:label="Add Record">
            <action android:name="android.intent.action.INSERT" />
            <category android:name="android.intent.category.DEFAULT" />
            <data android:mimeType="vnd.android.cursor.dir/vnd.google.mileage" />
         </intent-filter>

      </activity>
      <activity android:name=".EditPreferences" 
         android:theme="@style/Theme.Transparent"
         android:label="Mileage Tracker Preferences" />

      <activity android:name=".ChartViewer"
         android:theme="@android:style/Theme.NoTitleBar"
         android:label="FIXME" />
         
      <activity android:name=".ShortcutAddEntry"
         android:label="Add Mileage Entry">
         <intent-filter>
             <action android:name=".Add" />
             <category android:name="android.intent.category.DEFAULT" />
         </intent-filter>
      </activity>

        <!-- It is recommended that you use an activity-alias to provide the "CREATE_SHORTCUT" -->
        <!-- intent-filter.  This gives you a way to set the text (and optionally the -->
        <!-- icon) that will be seen in the launcher's create-shortcut user interface. -->

      <activity-alias android:name=".CreateShortcutAddEntry"
         android:targetActivity=".ShortcutAddEntry"
         android:label="Add Mileage Entry">

         <!--  This intent-filter allows your shortcuts to be created in the launcher. -->
         <intent-filter>
             <action android:name="android.intent.action.CREATE_SHORTCUT" />
             <category android:name="android.intent.category.DEFAULT" />
         </intent-filter>

      </activity-alias>
         
   </application>


<uses-sdk android:minSdkVersion="4"></uses-sdk>

<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

</manifest> 
